<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.back.dao.IClassifyDao">

    <!-- 通用查询结果列-->
    <sql id="Base_Column_List">
		 a.id as id,
		a.classify_name as classifyName,
		a.sort as sort
	</sql>

    <!-- 查询（列表查询） -->
    <select id="findList" resultType="com.back.po.Classify" parameterType="Map">
        SELECT
        <include refid="Base_Column_List"/>
        FROM classify a
        WHERE 1 = 1
        <if test="id != null and id != '' ">
            and a.id = #{id}
        </if>
        <if test="classifyName != null and classifyName != '' ">
            and a.classify_name = #{classifyName}
        </if>
        <if test="sort != null and sort != '' ">
            and a.sort = #{sort}
        </if>

    </select>

    <!-- 查询（根据主键ID查询） -->
    <select id="getEntityById" resultType="com.back.po.Classify" parameterType="java.lang.String">
        SELECT
        <include refid="Base_Column_List"/>
        FROM classify a
        WHERE id = #{id}
    </select>

    <!--删除：根据主键ID删除-->
    <delete id="delete" parameterType="java.lang.String">
		 DELETE FROM classify
		 WHERE id = #{id}
	</delete>

    <!-- 添加 -->
    <insert id="add" parameterType="com.back.po.Classify">
		 INSERT INTO classify
 		(id,classify_name,sort) 
		 VALUES 
 		(#{id},#{classifyName},#{sort}) 
	</insert>

    <!-- 添加 （匹配有值的字段）-->
    <insert id="insertSelective" parameterType="com.back.po.Classify">
        INSERT INTO classify
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="classifyName != null">classify_name,</if>
            <if test="sort != null">sort,</if>

        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id!=null">#{id},</if>
            <if test="classifyName!=null">#{classifyName},</if>
            <if test="sort!=null">#{sort},</if>
        </trim>
    </insert>

    <!-- 修 改-->
    <update id="update" parameterType="com.back.po.Classify">
        UPDATE classify
        <set>
            <if test="classifyName != null">classify_name = #{classifyName},</if>
            <if test="sort != null">sort = #{sort},</if>

        </set>
        WHERE id = #{id}
    </update>

    <!-- 修 改（匹配有值的字段）-->
    <update id="updateByPrimaryKey" parameterType="com.back.po.Classify">
		 UPDATE classify
		 SET 
			 classify_name = #{classifyName},
			 sort = #{sort}
		 WHERE id = #{id}
	</update>

    <select id="findDataGrid" parameterType="Map" resultType="com.back.po.Classify">
        select
        <include refid="Base_Column_List"/>
        from classify a
        <include refid="condition"/>
        order by a.sort ASC
    </select>
    <select id="countDataGrid" parameterType="Map" resultType="int">
        select
        count(a.id)
        from classify a
        <include refid="condition"/>

    </select>

    <sql id="condition">
		where 1=1
	</sql>
</mapper>